{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h2>Book</h2>
        <p>Title of the book : {{ book.title }}</p>
        <p>Publication date : {{ book.publicationDate|date('Y-m-d H:i:s') }}</p>
        <p>Author : {{ book.author.username }}</p>
        <button onclick="window.location.href='{{ path('app_book') }}'"> <- Back </button>
    </div>
{% endblock %}
