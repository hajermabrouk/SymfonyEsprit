{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
        <form action="{{ path('app_author_listByNbBook') }}" method="post">
                <label for="min">min</label>
                <input type="number" name="min" id="min">
                <label for="max">max</label>
                <input type="number" name="max" id="max">
                <input type="submit" value="Search">
        </form>
        <table border="1">
                <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>nbr_books</th>
                        <th>Actions</th>
                </tr>
                {% for author in authors %}
                <tr>
                        <td>{{ author.username }}</td>
                        <td>{{ author.email }}</td>
                        <td>{{ author.nbBooks }}</td>
                        <td><a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>&nbsp;&nbsp;
                                <a href="{{ path('app_author_delete', {'id': author.id}) }}">delete</a></td>
                </tr>
                {% endfor %}

        </table>
</div>
{% endblock %}
